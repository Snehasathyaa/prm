# Get user input for colors
user_input = input("Enter color names separated by commas: ")
color_list = [color.strip() for color in user_input.split(',')]  # Create a list of colors

# Display the list of colors with framing
print("*" * 20)  # Frame top
for color in color_list:
    print(f"* {color} *")  # Print each color with framing
print("*" * 20)  # Frame bottom

# Display the first and last color
if color_list:
    print("First color:", color_list[0])
    print("Last color:", color_list[-1])
else:
    print("No colors were entered.")
